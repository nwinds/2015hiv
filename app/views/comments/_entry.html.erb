<div class="comment_entry">
      <tr>
        <td><%= comment.commenter %></td>
        <td><%= comment.body %></td>
        <td><%= comment.product_id %></td>
        <td><%= link_to 'Show', product_comment_path(comment.product_id, comment), method: :get %></td>
        <td><%= link_to 'Edit', edit_product_comment_path(comment.product_id, comment), method: :get %></td>
        <td><%= link_to 'Destroy', product_comment_path(comment.product_id, comment), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
</div>
