<tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
      <td>
        <%= link_to line_items_path(:product_id => product), method: :post, remote: true do %>
        <% image_tag(product.avatar.url, :border => 0, :class => "list_image")  %>
        <% end %>
      </td>
      <td class="list_description">
          <h3><%= product.name %></h3>
      </td>
      <td class="list_description">
         <%= truncate(strip_tags(product.detail), :length => 80) %>
      </td>
      <td class="price_line"><span>
      <%= number_to_currency(product.price, :unit=>"ï¿¥") %>
      </span>
      <%= button_to 'Want!', line_items_path(:product_id => product),  remote: true %>
      </td>
        
        <td class="list_actions">
          <%= link_to 'Show', product %><br/>
        </td>
        <td class="list_actions">
          <%= link_to 'Edit', edit_product_path(product) %><br/>
        </td>
        <td class="list_actions">
          <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
        <td>
          <%= button_to "QREncode", product_encode_path(:product_id => product) %>
          <%= button_to "QRDecode", product_decode_path(:product_id => product) %>
        </td>
        

</tr>
        
