      <div class="product_entry">
      <tr>
        <td>
          <%= image_tag(product.icon_url, :class => 'list_image') %>
        </td>
        <td class="list_description">
          <dl>
            <dt><%= product.name %></dt>
            <dd><%= truncate(strip_tags(product.detail), :length => 80) %></dd>
          </dl>
        </td>
        <td class="price_line"><%= number_to_currency(product.price, :unit=>"ï¿¥") %></td>
          
          <td class="list_actions">
            <%= link_to 'Show', product %><br/>
          </td>
          <td class="list_actions">
            <%= link_to 'Edit', edit_product_path(product) %><br/>
          </td>
          <td class="list_actions">
            <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
              
        <!-- </td> -->
      </tr>
          
      </div>