<!DOCTYPE html>
<p id="notice"><%= notice %></p>

<h1>Product Detail</h1>

<div class="product_show">
<table>
  <thead>
    <tr>
      <th>Icon url</th>
      <th>Description</th>
      <th>Price</th>
      <!-- <th>Action</th> -->
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
	<%= render :partial => "entry", :locals => { :product => @product } %>
  </tbody>
</table>
</div>
	
<div class="comment_show">
<table>
<caption><h3>Comments List</h3></caption>
  <thead>
    <tr>
      <th>Commenter</th>
      <th>Body</th>
      <th>ProductID</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @product.comments.each do |comment| %>
        <%= render :partial => "comments/entry", :locals => { :comment => comment } %>
    <% end %>
  </tbody>
</table>
</div>

<div class="comment_add">
<table>
	<caption><h1>New Comment</h1></caption>
	<tr>
		<th colspan="1"></th>
	</tr>
	<td>
		<%= render :partial => 'comments/form', :locals => { :comment => @product.comments.build } %>
	</td>
</table>
</div>
