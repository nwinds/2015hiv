<div class="product_list">

<div class="search2">
  <%= form_tag(products_url, :method => "get", id: "search-form") do %>
    <%= text_field_tag :search, params[:search], placeholder: "请输入关键词..." %>
    <%= submit_tag "搜索", :name => nil %> <!-- notice the nil! -->
  <% end %>
</div>
 
<h1>商品列表</h1>
<table>
  <thead>
    <tr>
      <th></th>
      <th></th>
      <th></th>
      <!-- <th>Action</th> -->
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
    <%= render :partial => "entry", :locals => { :product => product } %>
    <% end %>
  </tbody>
</table>
</div>
<br />

<p><%= will_paginate @products %></p>
<%= link_to '添加新商品', new_product_path %>
