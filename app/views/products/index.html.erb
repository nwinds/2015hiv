<!DOCTYPE html>
<div class="product_list">
<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>
    

<section>
  <%= form_tag(products_url, :method => "get", id: "search-form") do %>
    <%= text_field_tag :search, params[:search], placeholder: "full-text search" %>
    <%= submit_tag "Search", :name => nil %> <!-- notice the nil! -->
  <% end %>
</section>
<h1>Listing Products</h1>
<table>
  <thead>
    <tr>
      <th>Icon url</th>
      <th>Description</th>
      <th>Price</th>
      <!-- <th>Action</th> -->
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
    <%= render :partial => "entry", :locals => { :product => product } %>
    <% end %>
  </tbody>
</table>
</div>
<br />
<p>w<%= will_paginate @products %></p>
<%= link_to 'New Product', new_product_path %>
