
<h1>Listing Line Items</h1>

<table>
  <thead>
    <tr>
      <th>Product</th>
      <th>Wishlist</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @line_items.each do |line_item| %>
      <tr>
        <td><%= line_item.product_id %></td>
        <td><%= line_item.wishlist_id %></td>
        <td><%= link_to '详细', line_item %></td>
        <td><%= link_to '编辑', edit_line_item_path(line_item) %></td>
        <td><%= link_to '删除', line_item, method: :delete, data: { confirm: '确认删除？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

