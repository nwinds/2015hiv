<html>
<head>
	<meta charset="UTF-8">
	<title>Document</title>
</head>
<body>
<p id="notice"><%= notice %></p>
<section>
<h2>Your Wishlist</h2>
<section>
<ul>
	<% @wishlist.line_items.each do |item| %>
	<!-- need adding wishlist's item CRUD latter -->
		<li>
			<%= item.quantity %> &times;
			<%= item.product.name %>
		</li>
	<% end %>
</ul>
<% button_to 'Empty Wishlist', @wishlist, method: :delete, :confirm => "Are you sure?\n(Deleting wishlist and all it's belongings?)" %>
	
</section>
	
</section>
<%= link_to 'Edit', edit_wishlist_path(@wishlist) %> |
<%= link_to 'Back', wishlists_path %>
	
</body>
</html>
